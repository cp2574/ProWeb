@model IEnumerable<TheFamilyFriend.Models.MenuInfo>
@{
    ViewBag.Title = "主页";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            @*<li class="active">
                    <strong>@ViewBag.Title</strong>
                </li>*@
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @{


            var menulist = ViewBag.Menu as List<TheFamilyFriend.Models.MenuInfo>;
            foreach (var user in menulist)
            {
                if (user.Popedomfatherid == 0)
                {
                    if (!string.IsNullOrEmpty(@user.MenuIcon))
                    {

                        foreach (var chilemenu in menulist)
                        {
                            if (chilemenu.Popedomfatherid == user.Id)
                            {

                                <div class="col-lg-3">
                                    <div class="widget lazur-bg p-lg text-center">
                                        <div class="m-b-md">
                                            <a href="@Url.Action(chilemenu.MethodName,chilemenu.ControllerName)">
                                                <i class="@user.MenuIcon fa-5x"></i>
                                                <h1 class="m-xs">@user.MenuName</h1>
                                                @*<h3 class="font-bold no-margins">
                                                    User
                                                </h3>
                                                <small>开心每一天 </small>*@
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                break;

                            }

                        }



                    }

                }
            }
        }
    </div>
</div>
