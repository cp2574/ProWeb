
@{
    ViewBag.Title = "玫瑰花";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">主页</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "SpecialEffects")">粒子漩涡</a>
            </li>
            <li class="active">
                <a href="@Url.Action("Flower", "SpecialEffects")"><strong>@ViewBag.Title</strong></a>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row ">
        <div class="tabs-container">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tab-1"> 标签1</a></li>
                <li class=""><a data-toggle="tab" href="#tab-2">标签2</a></li>
                <li class=""><a data-toggle="tab" href="#tab-3">标签3</a></li>
           
            </ul>
            <div class="tab-content ">
                <div id="tab-1" class="tab-pane active">
                    <div class="panel-body">
                        <p>
                            @*<iframe id="myframe1" scrolling="yes" name="topFrame1" frameborder="0" src="~/Views/SpecialEffects/FlowerType/_PartialFlower1.html" style="min-height:600px;width:100%;height:100%;">
                                如果你看到该文字，说明该浏览器不支持iframe
                            </iframe>*@
                        </p>
                    </div>
                </div>
                <div id="tab-2" class="tab-pane">
                    <div class="panel-body">
                        <p>
                            @*<iframe id="myframe2" scrolling="yes" name="topFrame2" frameborder="0" src="~/Views/SpecialEffects/FlowerType/_PartialFlower2.html" style="min-height:600px;width:100%;height:100%;">
                                如果你看到该文字，说明该浏览器不支持iframe
                            </iframe>*@
                        </p>
                    </div>
                </div>
                <div id="tab-3" class="tab-pane">
                    <div class="panel-body">
                        <p>
                            @*<iframe id="myframe3" scrolling="yes" name="topFrame3" frameborder="0" src="~/Views/SpecialEffects/FlowerType/_PartialFlower3.html" style="min-height:600px;width:100%;height:100%;">
                                如果你看到该文字，说明该浏览器不支持iframe
                            </iframe>*@
                        </p>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
@section scripts{
    <script>
                $(function () {
                    createiframe("tab-1", 1)
                    $('.tabs-container .nav-tabs li a').click(function () {
                        var m = $(this).attr("href");
                        id = m.substring(1, m.length)
                        num = m.substring(m.lastIndexOf("-")+1, m.length);
                        createiframe(id,num)
                        //因为渲染效果差，放弃使用其方法
                        @*$.ajax({
                            url: "@Url.Content("/SpecialEffects/Flowers")",
                            type: "Get",
                            dataType: "html",
                            data: { n:$(this).attr("data-bind")},
                            success: function (data) {
                                $("#Flowers").html(data);
                            }
                        })*@

                    })
        })

        ///动态创建iframe
        function createiframe(id, num) {
            console.log(id); console.log(num);
            var iframe = document.createElement("iframe"); 
            iframe.style = "min-height:600px;width:100%;height:100%;";
            iframe.scrolling = "yes";
            iframe.frameBorder = "0";
            iframe.src = "/Views/SpecialEffects/FlowerType/_PartialFlower" + num + ".html";
            $("#" + id + " p").text("");
            $("#" + id+" p").append(iframe);              
        }
    </script>

}
