
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>粒子效果文字动画</title>
    <link href="~/Content/Bildschirmtext/normalize.css" rel="stylesheet" />
    <link href="~/Content/Bildschirmtext/style.css" rel="stylesheet" />
</head>
<body>
    <div class="back" onclick="javascript: history.back(-1);">返回</div>
    <canvas class="canvas"></canvas>

    <div class="help">帮助</div>

    <div class="ui">
        <input class="ui-input" type="text" />
        <span class="ui-return">↵</span>
    </div>

    <div class="overlay">
        <div class="tabs">
            <div class="tabs-labels"><span class="tabs-label">命令</span><span class="tabs-label">信息</span><span class="tabs-label">共享</span></div>

            <div class="tabs-panels">
                <ul class="tabs-panel commands">
                    <li class="commands-item"><span class="commands-item-title">输入文字</span><span class="commands-item-info" data-demo="Hello :)">任何</span><span class="commands-item-action">演示</span></li>
                    <li class="commands-item"><span class="commands-item-title">倒计时</span><span class="commands-item-info" data-demo="#countdown 10">#countdown<span class="commands-item-mode">数字</span></span><span class="commands-item-action">演示</span></li>
                    <li class="commands-item"><span class="commands-item-title">时间</span><span class="commands-item-info" data-demo="#time">#time</span><span class="commands-item-action">当前时间</span></li>
                    <li class="commands-item"><span class="commands-item-title">矩阵</span><span class="commands-item-info" data-demo="#rectangle 30x15">#rectangle<span class="commands-item-mode">宽 x 长</span></span><span class="commands-item-action">演示</span></li>
                    <li class="commands-item"><span class="commands-item-title">圆</span><span class="commands-item-info" data-demo="#circle 25">#circle<span class="commands-item-mode">直径</span></span><span class="commands-item-action">演示</span></li>

                    <li class="commands-item commands-item--gap"><span class="commands-item-title">动画</span><span class="commands-item-info" data-demo="The time is|#time|#countdown 3|#icon thumbs-up"><span class="commands-item-mode">命令1</span>&nbsp;|<span class="commands-item-mode">命令2</span></span><span class="commands-item-action">演示</span></li>
                </ul>

                <div class="tabs-panel ui-details">
                    <div class="ui-details-content">
                        <h1>Shape Shifter</h1>
                        <p>
                            An experiment by <a href="" target="_blank">
                                Kenneth Cachia<a />.<br />
                                <a href="//fortawesome.github.io/Font-Awesome/#icons-new" target="_blank">Font Awesome</a> is being used to render all #icons.
                        </p>

                        <br /><p>Visit <a href="a=#icon thumbs-up" target="_blank">Shape Shifter</a> to use icons.</p>
                    </div>
                </div>

                <div class="tabs-panel ui-share">
                    <div class="ui-share-content">
                        <h1>演示</h1>
                        <p>Simply add <em>?a=</em> to the current URL to share any static or animated text. Examples:</p>
                        <p>
                            <a href="a=Hello" target="_blank">a=Hello</a><br />
                            <a href="a=Hello|#countdown 3" target="_blank">a=Hello|#countdown 3</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/Bildschirmtext/Bildschirmtext.js"></script>

</body>
</html>
