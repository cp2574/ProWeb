@model IEnumerable<TheFamilyFriend.Models.ApplicationUser>
@{
    ViewBag.Title = "角色下的用户";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">主页</a>
            </li>
            <li>
                <a href="@Url.Action("RoleList", "SystemManagement")">角色管理</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>角色 <strong class="text-navy"> @ViewBag.RoleName </strong> 的用户列表</h2>

    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a class="btn btn-primary btn-sm" href="@Url.Action("RoleList", "SystemManagement")">返回</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="col-lg-12">

            <div class="ibox-content">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>用户名</th>
                            <th>真名</th>
                            <th>联系电话</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => user.UserName)</td>

                                <td>@Html.DisplayFor(m => user.RealName)</td>
                                <td>@Html.DisplayFor(m => user.PhoneNumber)</td>
                                <td>
                                    <a class="btn btn-warning" href="@Url.Action("RemoveRoleUser", "SystemManagement",new { roleName = ViewBag.RoleName, userId = user.Id })" onclick="return confirm('你确认移除吗？')"><i class="fa fa-child"></i> 移除用户 </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
