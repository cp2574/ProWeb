@model IEnumerable<TheFamilyFriend.Models.MenuInfo>
@{
    /**/

    ViewBag.Title = "角色下菜单";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">主页</a>
            </li>
            <li>
                <a href="@Url.Action("MenuList", "SystemManagement")">角色管理</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>角色 <strong class="text-navy"> @ViewBag.RoleName </strong> 的菜单列表</h2>

    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a class="btn btn-primary btn-sm" href="@Url.Action("RoleList", "SystemManagement")">返回</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h3>一级菜单列表</h3>
                    <div class="form-group">
                        <div class="input-group">
                            <ul class="nav nav-pills nav-stacked" style="float:left;">
                                @foreach (TheFamilyFriend.Models.MenuInfo data1 in (ViewBag.drolistmenu as IEnumerable<TheFamilyFriend.Models.MenuInfo>))
                                {

                                    <li class="titlesize" style="float:left;">
                                        <a href="~/SystemManagement/ShowRoleMenu?Id=@ViewBag.RoleId&SeachColumnString=@data1.Id"><span class="glyphicon glyphicon glyphicon-th-large" aria-hidden="true"></span> @data1.MenuName</a>

                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-hover issue-tracker">
                            <tbody>
                                    @foreach (var menu in Model)
                                    {
                                        <tr>
                                            <td>
                                                @menu.Id
                                            </td>
                                            <td class="issue-info">
                                                <i class="@menu.MenuIcon"></i> @menu.MenuName
                                            </td>
                                            <td>@menu.ControllerName/@menu.MethodName</td>
                                            <td>
                                                <a class="btn btn-warning" href="@Url.Action("RemoveRoleMenu", "SystemManagement",new { RoleId=ViewBag.RoleId, MenuId =menu.Id })" onclick="return confirm('你确认解除吗？')"><i class="fa fa-child"></i> 解除绑定 </a>
                                            </td>
                                        </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>