@model IEnumerable<TheFamilyFriend.Models.MenuInfo>
@{
    /**/

    ViewBag.Title = "角色下菜单";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">主页</a>
            </li>
            <li>
                <a href="@Url.Action("MenuList", "SystemManagement")">角色管理</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>角色 <strong class="text-navy"> @ViewBag.RoleName </strong> 的菜单列表</h2>

    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a class="btn btn-primary btn-sm" href="@Url.Action("RoleList", "SystemManagement")">返回</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="col-lg-12">

            <div class="ibox-content">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MenuName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MenuPath)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var menu in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => menu.MenuName)</td>
                                <td>@Html.DisplayFor(m => menu.ControllerName)/@Html.DisplayFor(m => menu.MethodName)</td>
                                <td>
                                    <a class="btn btn-warning" href="@Url.Action("RemoveRoleMenu", "SystemManagement",new { RoleId=ViewBag.RoleId, MenuId =menu.Id })" onclick="return confirm('你确认解除吗？')"><i class="fa fa-child"></i> 解除绑定 </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>