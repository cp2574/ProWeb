
@{
    ViewBag.Title = "角色管理";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">主页</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox ui-resizable">
              
                <div class="ibox-content">
                    <a href="@Url.Action("AddRole", "SystemManagement")" class="btn btn-w-m btn-info">新增角色</a>       
                    <table id="tab"></table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles{
    <link href="~/Content/table/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Content/table/bootstrap-table-pagejump.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/table/dist/bootstrap-table.min.js"></script>
    <script src="~/Scripts/table/bootstrap-table-zh-CN.min.js"></script>
    <script src="~/Scripts/table/bootstrap-table-pagejump.js"></script>

    <script>
    $(function () {
        $.post("@Url.Action("GetroleList", "SystemManagement")", function (result) {
            console.warn(result);
            //加载事件
            $("#tab").bootstrapTable('load', result);
        })
        })
        function operateFormatter(value, row, index) {
            return [
                ' <a class="RoleOfEidt btn btn-success" href="/SystemManagement/EditRole/' + row.Id +'" ><i class="fa fa-edit"></i> 编辑 </a>',
                ' <a class="RemoveRole btn btn-warning" href="javascript:void(0);" ><i class="fa fa-bank"></i> 删除 </a>',
                ' <a class="UserToRole btn btn-info" href="/SystemManagement/UserToRole/' + row.Id +'" ><i class="fa fa-user-circle"></i> 添加用户 </a>',
                 ' <a class="ViewRoleUser btn btn-success" href="javascript:void(0);" ><i class="fa fa-eercast"></i> 查看用户 </a>',

            ].join('');
        }

       window.operateEvents = {
            'click .RemoveRole': function (e, value, row, index) {
                if (confirm("您确定删除吗！")) {
                    $(this).attr("href", "RemoveRole/" + row.Id)
                    return true;
                } else {
                    return false;
                }

           },
         
        };
       $('#tab').bootstrapTable({
        //请求方法
        method: 'get',
        //是否显示行间隔色
        striped: true,
        //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
        cache: false,
        //是否显示分页（*）
        pagination: true,
        //是否启用排序
        sortable: true,
        //排序方式
        sortOrder: "asc",
        //初始化加载第一页，默认第一页
        //我设置了这一项，但是貌似没起作用，而且我这默认是0,- -
        //pageNumber:1,
        //每页的记录行数（*）
        pageSize: 10,
        //可供选择的每页的行数（*）
        pageList: [10, 20, 25],
        //这个接口需要处理bootstrap table传递的固定参数,并返回特定格式的json数据
        data: [],
        //是否显示搜索
        search: false,
        strictSearch: true,
        idField: "ID",
        pagination: true,
        showHeader: true,
        showRefresh: false,
        paginationShowPageGo: true,
        showToggle: true,//切换
        showColumns: true,//显示列
        columns: [
            { title: 'Id', field: 'Id', align: 'center', valign: 'middle', sortable: true, visible: false, width: '10%' },
            { title: '角色名称', field: 'Name', align: 'center', valign: 'middle', sortable: true, width: '30%'},
            { title: '描述', field: 'Description', align: 'center', valign: 'middle', sortable: true,width: '30%' },
            {
                title: '操作', field: 'operate', align: 'center', width: '20%', events: operateEvents,
                formatter: operateFormatter
            },
            ],
        });
    </script>}

